# QA environment settings (persistent, public HTTPS FQDN).
# Copy to wsl2/env/.env.qa and set real values.

NODE_ENV=production
PORT=3000
DOMAIN=qa.example.com
SITE_TITLE=Kowloon QA

JWT_SECRET=replace_with_qa_jwt_secret

ADMIN_EMAIL=qa-operator@example.com
ADMIN_PASSWORD=replace_with_qa_operator_password
QA_OPERATOR_EMAIL=qa-operator@example.com
QA_OPERATOR_PASSWORD=replace_with_qa_operator_password
QA_OPERATOR_USERNAME=qaadmin

MONGO_USERNAME=kowloon
MONGO_PASSWORD=replace_with_qa_mongo_password
MONGO_DATABASE=kowloon_qa
MONGO_URI=mongodb://kowloon:replace_with_qa_mongo_password@mongodb:27017/kowloon_qa?authSource=admin

S3_ENDPOINT=http://minio:9000
S3_REGION=us-east-1
S3_BUCKET=kowloon-qa
S3_ACCESS_KEY=replace_with_qa_minio_access_key
S3_SECRET_KEY=replace_with_qa_minio_secret_key
S3_PUBLIC_URL=https://qa.example.com/files

# Production backup artifacts used by sync-prod-to-qa.
PROD_MONGO_ARCHIVE=/path/to/prod-mongo.archive.gz
PROD_MINIO_ARCHIVE=/path/to/prod-minio-volume.tar.gz

# Edge / Traefik settings
EDGE_NETWORK=kowloon-edge
TRAEFIK_CERT_RESOLVER=le
