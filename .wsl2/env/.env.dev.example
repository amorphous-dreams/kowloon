# Kowloon local dev environment (Docker)
# Copy to wsl2/env/.env.dev and adjust only if needed.

# ====================
# SERVER SETTINGS
# ====================
NODE_ENV=development
PORT=3000
DOMAIN=localhost
DEV_DOMAIN=kowloon.localhost
SITE_TITLE=KowloonDev

# ====================
# SECURITY / ADMIN (dev defaults only)
# ====================
JWT_SECRET=changeme_dev_jwt_secret
ADMIN_EMAIL=admin@localhost
ADMIN_PASSWORD=changeme_dev_admin_password

# ====================
# DATABASE (MongoDB)
# ====================
MONGO_USERNAME=kowloon
MONGO_PASSWORD=changeme_dev_mongo_password
MONGO_DATABASE=kowloon_dev
MONGO_HOST_PORT=27017
MONGO_URI=mongodb://kowloon:changeme_dev_mongo_password@mongodb:27017/kowloon_dev?authSource=admin

# ====================
# OBJECT STORAGE (MinIO/S3)
# ====================
S3_ENDPOINT=http://minio:9000
S3_REGION=us-east-1
S3_BUCKET=kowloon
S3_ACCESS_KEY=changeme_dev_minio_access_key
S3_SECRET_KEY=changeme_dev_minio_secret_key
S3_PUBLIC_URL=http://localhost:9000/kowloon
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001
